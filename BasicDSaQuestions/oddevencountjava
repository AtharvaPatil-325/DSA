
public class oddevencount {
    public static void main(String[] args) {
        int num =1234;
        int even_count=0;
        int odd_count=0;
        for(int i =0;num!=0;i++){
            if(i%2==0){
                even_count++;
            }
            else{
                odd_count++;
            }
        }
        System.out.println("Even:"+even_count+" odd:"+odd_count);
    }
}

        



        